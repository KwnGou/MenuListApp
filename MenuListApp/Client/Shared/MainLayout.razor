@inherits LayoutComponentBase

<RadzenNotification />
<RadzenDialog />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <div class="container-fluid">
            <div class="row justify-content-start align-items-center">
                <div class="col-6 d-flex align-items-center ps-0 pl-0">
                    <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
                </div>
                <div class="col-6 d-flex align-items-center justify-content-end pr-0 pe-0">
                </div>
            </div>
        </div>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <div class="container-fluid pt-2 pt-md-3 pt-lg-4 pt-xl-5 pb-2 pb-lg-5" style="max-width: 1440px;">
            <div class="row">
                <div class="col">
                    @Body
                </div>
            </div>
        </div>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <div class="py-3 py-lg-4" style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border); display: flex; flex-direction: column; gap: 1rem; align-items: center;">
            <RadzenImage Path="/css/menu_book_fill0_wght400_grad0_opsz48.png" style="width: 48px; height: 48px;"></RadzenImage>
            <RadzenText Text="Menu List App" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="mb-0" style="color: var(--rz-primary-light);" />
        </div>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Menu" Path="/" Icon="home" />
            <RadzenPanelMenuItem Text="Plates" Path="plates" Expanded="@true" Icon="restaurant">
                <RadzenPanelMenuItem Text="Plate categories" Path="platesCategories" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Ingredients" Path="ingredients" Icon="add_shopping_cart">
                <RadzenPanelMenuItem Text="Ingredient Categories" Path="ingredientsCategories" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Items" Path="items" Icon="add_shopping_cart">
                <RadzenPanelMenuItem Text="Item Categories" Path="itemsCategories" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Shopping Lists" Path="shoppingLists" Icon="shopping_bag" />
        </RadzenPanelMenu>
        <div class="py-3 py-md-4" style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="Menu List App v1.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </div>
    </RadzenSidebar>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;

    void SidebarToggleClick()
    {
        sidebarExpanded = !sidebarExpanded;
    }
}

